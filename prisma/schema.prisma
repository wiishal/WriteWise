generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String @id @default(uuid())
  clerkId   String @unique
  email     String @unique
  name      String?

  progress        UserProgress?
  writingAnalyses WritingAnalysis[]
  emailAnalyses   EmailAnalysis[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserProgress {
  userId String @id
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  emailLevel Int @default(1)
  writeLevel Int @default(1)

  emailCount Int @default(0)
  writeCount Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model WritingAnalysis {
  id Int @id @default(autoincrement())

  userId String
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  subject String

  /// 0–100
  clarityScore   Int
  structureScore Int
  grammarScore   Int

  feedback String?
  userWriting String?

  createdAt DateTime @default(now())

  @@index([userId])
}

model EmailTask {
  id Int @id @default(autoincrement())

  level    Int
  subject  String
  audience String
  tone     String
  purpose  String

  hint    String?
  example String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model EmailAnalysis {
  id Int @id @default(autoincrement())

  userId String
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  level Int

  /// 0–100
  clarityScore   Int
  structureScore Int

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([userId, level])
}
